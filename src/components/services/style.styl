.c-services
  $imageMargin= 2rem

  position relative

  &:before,
  &:after
    content ''
    position absolute
    width 100%
    transform 'skewY(%s)' % $angle-horz
    z-index 1

  &:before
    background $color-brand
    bottom 1rem
    height 1.25rem

  &:after
    background $color-accent
    border-bottom 0.4rem solid $color-accent-darker
    bottom 0
    height 1rem

  .c-content-section__wrapper
    padding-top 2rem
    padding-bottom 4rem

  &__items
    margin-top 4rem

  &__item
    background #fff
    border-top 0.25rem solid darken(#fff, 15)
    margin-top -6.5rem

    &:nth-child(odd)
      transform 'skewY(%s)' % $angle-horz

      .c-services__item
        &-content
          transform 'skewY(%s)' % ($angle-horz * -1)

        &-image
          float left
          margin-right $imageMargin
          margin-left $imageMargin * -1

    &:nth-child(even)
      transform 'skewY(%s)' % ($angle-horz * -1)

      .c-services__item
        &-content
          transform 'skewY(%s)' % $angle-horz

        &-image
          float right
          margin-right $imageMargin * -1
          margin-left $imageMargin

  &__item-image
    margin-top 2rem
