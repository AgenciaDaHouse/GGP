mixin address()
  .c-address
    .c-address__group.u-grid.u-grid--no-gutter.u-grid--not-responsive
      i.c-address__icon.u-icon location
      .c-address__content.u-grid__cell
        p Av.: Maringá, 1995 Sl 05 Térreo
        p Jd.: Vitória | Londrina-PR
        p CEP: 86060-000

    .c-address__group.u-grid.u-grid--no-gutter.u-grid--not-responsive
      i.c-address__icon.u-icon phone
      .c-address__content.u-grid__cell
        p.c-address__text
          span 43
          = ' 3324-8571'

    .c-address__group.u-grid.u-grid--no-gutter.u-grid--not-responsive
      i.c-address__icon.u-icon envelope
      .c-address__content.u-grid__cell
        - email= 'contato@ggpmarcas.com.br'
        a.c-address__text(href='mailto:#{email}') #{email}
        
    .c-address__group.u-grid.u-grid--no-gutter.u-grid--not-responsive
      i.c-address__icon.u-icon facebook
      .c-address__content.u-grid__cell
        a.c-address__text(href='https://facebook.com/ggpmarcas') /ggpmarcas
